<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.localhost.javacomponent.RemovePersonController">
   <children>
       <MenuBar layoutY="2.0" prefHeight="26.0" prefWidth="600.0">
           <menus>
               <Menu mnemonicParsing="false" text="Home">
                   <items>
                       <MenuItem mnemonicParsing="false" onAction="#onHomeClick" text="Ir al inicio" />
                   </items>
               </Menu>
               <Menu mnemonicParsing="false" text="Person">
                   <items>
                       <MenuItem mnemonicParsing="false" onAction="#onInsertPersonClick" text="Insertar Persona" />
                       <MenuItem mnemonicParsing="false" onAction="#onModPersonClick" text="Modificar Persona" />
                   </items>
               </Menu>
               <Menu mnemonicParsing="false" text="House">
                   <items>
                       <MenuItem mnemonicParsing="false" onAction="#onInsertHouseClick" text="Insertar Casa" />
                       <MenuItem mnemonicParsing="false" onAction="#onModHouseClick" text="Modificar Casa" />
                  <MenuItem mnemonicParsing="false" onAction="#onDelHouseClick" text="Eliminar Casa" />
                   </items>
               </Menu>
               <Menu mnemonicParsing="false" text="Ayuda">
                   <items>
                       <MenuItem mnemonicParsing="false" text="Acerca de" />
                   </items>
               </Menu>
           </menus>
       </MenuBar>
       <Label fx:id="lTitulo" layoutX="14.0" layoutY="40.0" text="Eliminar una persona existente">
           <font>
               <Font name="Arial Bold" size="20.0" />
           </font>
       </Label>
   </children>
</AnchorPane>
